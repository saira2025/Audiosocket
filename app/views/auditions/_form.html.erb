<!-- form html -->
<div id= "container" class="table-responsive">
  <div class="container-fluid w-75 border rounded shadow mt-5 p-4 text-center" >
    <h2>Submit Audition </h2>
    <%= form_for  @audition  do |f| %>
      <div class="field mb-3 text-start">
        <%= f.label :First_Name, class: "form-label" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
      </div>
      <div class="field mb-3 text-start">
        <%= f.label :Last_Name, class: "form-label" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
      </div>
      <div class="field mb-3 text-start">
        <%= f.label :email, class: "form-label" %> <div class="clearfix"></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div> 
      <div class="field mb-3 text-start">
        <%= f.label :Artist_Name, class: "form-label" %>
        <%= f.text_field :artist_name, autofocus: true, autocomplete: "artist_name", class: "form-control" %>
      </div>
      <div class="field mb-3 text-start" >
        <%= f.label :Add_songs_link_to_songs, class: "form-label"%><br />
                <div class="songs">
          <%= f.fields_for :songs do |song| %> <br>
            <%= render 'song_fields', f: song %>
          <% end %>
        </div>
        <div class="actions mb-2 ">
          <%= link_to_add_association 'Add More', f, :songs, limit: 4, class: 'btn btn-primary', id:'add-songs-button', data: {
            association_insertion_node: '.songs', association_insertion_method: :append
          } %>
        </div>
      </div>
      <div class="dropdown">
      <div class="dropdown field mb-3 text-start">
        <%= f.label :Select_Genre, class: "form-label" %><br />
        <%= f.select :genre, options_for_select(Audition.genres.keys.to_a.map {|key| [key.titleize, key]}), {}, class: "mx-2 form-select"  %>
      </div>
      <div class="dropdown field mb-3 text-start">
        <%= f.label :How_did_you_hear_about_us, class: "form-label" %> <br />
        <%= f.select :about_us, options_for_select([['Twitter', 'twitter'],['Facebook', 'facebook'],['Instagram', 'instagram']]), {}, class: "mx-2 form-select" %>
      </div>
      <div class="field mb-3 text-start">
        <%= f.label :Additional_Info, class: "form-label" %>
        <%= f.cktext_area :additional_info, autofocus: true, autocomplete: "additional_info", class: "form-control" %>
      </div>
      <div class="actions mb-2">
        <%= f.submit "Submit Audition", class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
