<!-- form html -->
<div id="container" class="table-responsive">
  <div class="container">
    <div class="row">
      <div class="col-md-3 ">
        <div class="list-group ">
          <a href="#" class="list-group-item list-group-item-action active">Profile</a>
          <a href="#" class="list-group-item list-group-item-action">Music</a>
        </div>
      </div>
      <div class="col-md-9">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <h4>Profile</h4>
                <hr>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= form_for @user do |f| %>
                  <div class="form-group row mb-3">
                    <div class="field mb-3 text-start">
                      <% byebug %>
                      <%= f.label :Artist_Name, class: "col-4 col-form-label"%>
                      <%= f.text_field :Artist_Name, value: current_user.auditions&.last&.artist_name , class: 'text_field', :disabled => true %>
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                    <div class="field mb-3 text-start">
                      <%= f.label :email, class: "col-4 col-form-label"%>
                      <%= f.email_field :email, value: @user.auditions&.last&.email, class: 'text_field', :disabled => true %>
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                    <%= f.label :Country, class: "col-4 col-form-label" %>
                    <div class="col-8">
                      <%= f.text_field :country, autofocus: true, class: "form-control here" %>
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                      <%= f.label :image, class: "col-4 col-form-label" %>
                      <div class="col-8">
                        <%= f.file_field :image, class: "form-control" %>
                      </div>
                  </div>
                  <hr>
                  <div class="form-group row mb-3">
                    <%= f.label :Bio, class: "col-4 col-form-label" %>
                    <div class="col-8">
                      <%= f.text_area :bio, class: "form-control here"%>
                    </div>
                  </div>
                  <div class="form-group row mb-3">
                    <%= f.label :website_link, class: "col-4 col-form-label" %>
                    <div class="col-8">
                      <%= f.text_field :website_link, class: "form-control here"%>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= f.label :social_link, class: "col-4 col-form-label" %>
                    <div class="col-8">
                      <%= f.text_field :social_link, multiple: true, class: "form-control here"%>
                      <%= f.text_field :social_link, multiple: true, class: "form-control here"%>
                      <%= f.text_field :social_link, multiple: true, class: "form-control here"%>
                    </div>
                  </div>

                  <div class="form-group row mt-3">
                    <div class="offset-4 col-6 mt-4">
                      <%= f.submit "UPGRADE TO PRO", class: 'btn btn-primary' %>
                    </div>
                    <div class="offset-4 col-6 mt-4">
                      <%= f.submit "SAVE", class: 'btn btn-primary btn-lg' %>
                      <%= f.submit "CANCEL", class: 'btn btn-primary btn-lg' %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
